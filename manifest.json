{
  "manifest_version": 3,
  "name": "ClearConsent",
  "version": "1.0",
  "description": "Summarizes terms and conditions using AI.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/C.png",
      "48": "images/C.png",
      "128": "images/C.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}